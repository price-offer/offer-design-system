{
  "extends": "../../tsconfig.base.json",
  "include": ["src", "vite.config.ts", "*.d.ts"],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@components": ["components"],
      "@constants/*": ["constants/*"],
      "@constants": ["constants"],
      "@hooks/*": ["hooks/*"],
      "@hooks": ["hooks"],
      "@styles/*": ["styles/*"],
      "@styles": ["styles"],
      "@themes/*": ["styles/themes/*"],
      "@themes": ["styles/themes"],
      "@types/*": ["types/*"],
      "@types": ["types"],
      "@utils/*": ["utils/*"],
      "@utils": ["utils"]
    }
  }
}
